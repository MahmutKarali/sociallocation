<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_button_light_border"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.9"
                    android:fontFamily="sans-serif"
                    android:gravity="left|center_vertical"
                    android:text="Add New Exam"
                    android:textColor="#D4AF37"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/close"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.1"
                    android:gravity="right|center_vertical"
                    android:text="X"
                    android:textColor="#616A6B"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#B2BABB"></FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:fontFamily="sans-serif"
                    android:gravity="left|center_vertical"
                    android:text="Exam Name :"
                    android:textColor="#616A6B"
                    android:textSize="14dp"></TextView>

                <EditText
                    android:id="@+id/exam_name"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.6"
                    android:backgroundTint="#616A6B"
                    android:fontFamily="sans-serif"
                    android:textColor="#616A6B"
                    android:textSize="12dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:fontFamily="sans-serif"
                    android:gravity="left|center_vertical"
                    android:text="Exam Type :"
                    android:textColor="#616A6B"
                    android:textSize="14dp"></TextView>

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.6"
                    android:backgroundTint="#616A6B"
                    android:fontFamily="sans-serif"
                    android:textColor="#616A6B"
                    android:textSize="14dp"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <CheckBox
                    android:id="@+id/switch_unseen_qs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:buttonTint="#616A6B"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="only unseen questions"
                    android:textColor="#616A6B"></CheckBox>

                <CheckBox
                    android:id="@+id/switch_favorite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:buttonTint="#616A6B"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="favorite questions"
                    android:textColor="#616A6B"></CheckBox>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1" />

            <LinearLayout
                android:id="@+id/ll_create"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_create"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_button_dark_blue"
                        android:fontFamily="sans-serif"
                        android:text="Create"
                        android:textAllCaps="false"
                        android:textColor="#D4AF37"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>